<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-app='app' ng-controller='MainCtrl'>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    {{2+2}}
    <form ng-submit="submitAnswer()">
      <input type="radio" value="A" ng-model="answer">{{question.choiceA}}
      <input type="radio" value="B" ng-model="answer">{{question.choiceB}}
      <input type="radio" value="C" ng-model="answer">{{question.choiceC}}
      <input type="radio" value="D" ng-model="answer">{{question.choiceD}}
      <button type="submit">submit Answer</button>
      <h1>{{question.answer}}</h1>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="javascripts/index.js"></script>
  </body>
</html>
