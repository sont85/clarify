<!DOCTYPE html>
<html ng-app='app'>
  <head>
    <title>Clarity</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cosmo/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.0/sweetalert.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand page-scroll" href="#page-top">CLARITY</a>
      </div>
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav navbar-right">
          <% if (user && user.type === 'student') { %>
            <li><a href="#/student">Student Dashboard</a></li>
          <% } else if (user && user.type === 'teacher') { %>
            <li><a href="#/teacher">Teacher Dashboard</a></li>
          <% } %>
          <% if (user) { %>
            <li><a href="#" class="navbar-link"><%= user.displayName %></a></li>
            <li><a href="/logout">Log Out</a></li>
          <% } else {%>
            <li><a href="/auth/google">Log In</a></li>
          <% } %>

        </ul>
      </div>
    </nav>
    <% if (user) { %>
      <div class='top-padding wood-image'>
        <div class='container'>
          <div ui-view></div>
        </div>
      </div>
    <% } else { %>
      <div class='text-center main-image'>
        <div class='vertical-middle'>
          <h1 class='white clarity-title'>Clarity</h1>
          <h2 class='white'>Real Time Classroom Feedback</h2>
          <a href='/auth/google'><img width='200' src='https://www.luvzoll.com/images/sign-in-with-google.png'></a>
          <h4 class='white shadow'>Implement Multiple Choice Question And Evaluate Students' Answers In Real Time.</h5>
          <h4 class='white shadow'> Ability To Have In Class Discussion Through Chatroom. </h5>
        </div>
      </div>
    <% } %>
    <% if (user && !user.type) { %>

      <div class='text-center panel' ng-controller='MainCtrl'>
        <form ng-submit='registerUser()'>
          <h5>Please Register User Type</h5>
          <label for='registerTeacher'>Teacher</label>
          <input name='userType' type='radio' id='registerTeacher' value='teacher' ng-model='type' required>
          <label for='registerStudent'>Student</label>
          <input name='userType' type='radio' id='registerStudent' value='student' ng-model='type' required>
          <div>
            <button class='btn btn-default' type='submit'>registered user</button>
          </div>
        </form>
      </div>
    <% } %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.0/sweetalert.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highcharts/4.1.7/highcharts.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highcharts/4.1.7/highcharts-3d.js"></script>
  <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
  <script src="bundle.js"></script>
</body>
</html>
